---
import { projects } from "../../content/data/projects.json"
import Project from "../molecules/Project.astro"
---

{
  projects.map((project) => {
    const custom = project.custom || {};
    return (
      <>
        <Project
          name={project.name}
          description={project.description}
          href={project.link}
          ctext={custom.text || ""}
          clink={custom.link || ""}
          langs={project.langs}
          tools={project.tools}
          date={project.date}
        />
        <br />
        <br />
      </>
    );
  })
}
