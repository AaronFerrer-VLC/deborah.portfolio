---
import { Image } from "astro:assets"
import {
  Card,
  CardContent,
  CardHeader,
  CardTitle,
  CardFooter,
} from "@/components/ui/card"
import LinkBtn from "@/components/atoms/LinkBtn.astro"
const { title, description, href, ctext, clink, tools, langs, date, company, skills } =
  Astro.props
---

<Card
  className="rounded-xl bg-white/30 dark:bg-gray-800/30 border-none shadow-xl mx-2 md:mx-12 fade mb-4"
>
  <CardHeader className="flex items-center gap-4">
    <img
      src={`/images/${company}.jpeg`}
      width="44"
      height="44"
      alt="Company Logo"
      class="company-logo rounded-full"
    />
    <CardTitle className="text-gray-800 dark:text-gray-100 text-left">
      {title}
    </CardTitle>
    
  </CardHeader>
  <CardContent>
    <p class="text-gray-800 dark:text-gray-300 text-left">
      {description}
    </p>
    <p class="text-sm pt-2 text-gray-700 dark:text-gray-400 text-left">
      {date}
    </p>
    <br />
    <div class="flex gap-2">
       <div class="text-left mt-4">
      <strong>Skills:</strong>
      <ul class="list-disc list-inside text-gray-800 dark:text-gray-300">
        {skills.split(",").map((skill: string, index: number) => (
          <Fragment key={index}>
            <li>{skill.trim()}</li>
          </Fragment>
        ))}
      </ul>
    </div>
    </div>
  </CardContent>
  <CardFooter>
    <LinkBtn
      className="ml-[-10px] text-black dark:text-white"
      text="View on Linkedin"
      href={href}
      size="base"
      target="_blank"
    />
    {
      ctext && (
        <LinkBtn
          text={ctext}
          href={clink}
          size="base"
          target="_blank"
          className="text-black dark:text-white"
        />
      )
    }
  </CardFooter>
</Card>