---
const { institution, degree, year, grade, description, logo, link } = Astro.props;
---

<div class="rounded-xl bg-white/30 dark:bg-gray-800/30 border-none shadow-xl mx-2 md:mx-12 fade p-4 mb-4">
  {logo && (
    <img
      src={`/images/${logo}.jpeg`}
      alt={`${institution} logo`}
      class="w-16 h-16 object-contain mb-4 rounded-full"
    />
  )}
  <h3 class="text-gray-800 dark:text-gray-100">{institution}</h3>
  <p class="text-gray-800 dark:text-gray-300">{degree}</p>
  <p class="text-sm pt-2 text-gray-700 dark:text-gray-400">{year}</p>
  {grade && <p class="text-sm pt-2 text-gray-700 dark:text-gray-400">{grade}</p>}
  <p class="text-sm pt-2 text-gray-700 dark:text-gray-400">{description}</p>
  {link && (
    <a
      href={link}
      target="_blank"
      rel="noopener noreferrer"
      class="mt-2 block text-blue-500 hover:underline"
    >
      Ver m√°s
    </a>
  )}
</div>